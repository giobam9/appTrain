<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apptrain.WorkoutPage"
             Title="WorkoutPage">
    <VerticalStackLayout>
        <Label 
            x:Name="ExerciseName"
            FontSize="24"
            HorizontalOptions="Center"        
            />
        <Entry 
            x:Name="Podxod"
            Placeholder="введите количество подходов" 
            Keyboard = "Numeric"/>
        <Entry 
            x:Name="Povtor"
            Placeholder="введите количество повторений" 
            Keyboard = "Numeric"/>
        <Button
            Text="сохранить"
            Clicked="OnSaveClicked"/>

    </VerticalStackLayout>
</ContentPage>